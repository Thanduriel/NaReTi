type GlobalInt
{
	int val
}

GlobalInt xsNumber

initRandom(int seed)
{
	xsNumber.val = seed
}

int xorshift(int num)
{
	num = num ^ (num << 13)
    num = num ^ (num >> 17)
    num = num ^ (num << 5)
        
    return num
}

// returns a evenly distributed number in [min, max]
int rand(int max, int min)
{
	xsNumber.val = xorshift(xsNumber.val)
	
	return (xsNumber.val % (max + 1 - min)) + min
}