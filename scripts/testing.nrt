iVec2 addiVec(int x0, int y0, int x1, int y1 )
{
	iVec2 res
	res.x = x0 + x1
	res.y = y0 + y1
	
	return res
}

iVec2 +(iVec2& slf, iVec2& oth)
{
	iVec2 res
	res.x = slf.x + oth.x
	res.y = slf.y + oth.y
	
	return res
}

